{%- if metro_backup_root is defined %}
metro_backup_root: "{{ metro_backup_root }}"
{%- else %}
# metro_backup_root: (unzip dir)/backups
{%- endif %}

# < Upgrade From Version >
# Version VSP is being upgraded from. Required for all component upgrades.
#
{%- if upgrade_from_version is defined %}
upgrade_from_version: "{{ upgrade_from_version }}"
{%- else %}
# upgrade_from_version: ""
{%- endif %}

# < Upgrade To Version >
# Version VSP is being upgraded to. Required for all component upgrades.
#
{%- if upgrade_to_version is defined %}
upgrade_to_version: "{{ upgrade_to_version }}"
{%- else %}
# upgrade_to_version: ""
{%- endif %}

# < VSTAT NFS Server >
# NFS server required during ElasticSearch (vstat) upgrade to store backup files.
#
{%- if vstat_nfs_server is defined %}
vstat_nfs_server: "{{ vstat_nfs_server }}"
{%- else %}
# vstat_nfs_server: 0.0.0.0
{%- endif %}

# < VSTAT NFS Directory >
# Directory path on the NFS server where backup files will be kept during ElasticSearch (vstat) upgrade
#
{%- if vstat_nfs_folder is defined %}
vstat_nfs_folder: "{{ vstat_nfs_folder }}"
{%- else %}
# vstat_nfs_folder: /tmp/vstat/
{%- endif %}

